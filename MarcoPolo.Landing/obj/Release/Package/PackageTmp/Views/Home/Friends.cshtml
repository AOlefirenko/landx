                $('#apple').on('click', function() {
                    ga('send', 'event', 'button', 'click', 'apple');
                });
                $('#android').on('click', function() {
                    ga('send', 'event', 'button', 'click', 'android');
                });
                var $email = $('#email');
                var $send = $('#send');

                function validate(e) {
                    setTimeout(function() {
                        var val = e.currentTarget.value;
                        if (!val || val.indexOf('@Html.Raw("@")') == -1 || val.indexOf('.') == -1)
                            $send.prop('disabled', true);
                        else $send.prop('disabled', false);
                    }, 100);
                }

                $email.on('paste', validate);
                $email.on('cut', validate);
                $email.on('keyup', validate);
                $email.on('change', validate);
                $email.on('mousedown', validate);
                $email.on('mouseup', validate);
                $email.on('blur', validate);
                $send.on('click', function(e) {
                    e.preventDefault();
                    ga('send', 'event', 'button', 'click', 'email');
                    $.post('/signup', $('#form').serialize()).then(function() {
                        $email.val('');
                        $email.prop('placeholder', 'Спасибо!');
                        $send.addClass('disabled');
                    });
                });
            })

